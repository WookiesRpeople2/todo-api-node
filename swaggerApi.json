{
  "openapi": "3.0.0",
  "info": {
    "title": "Todo API",
    "description": "Simple Express API for managing todos with a file-backed SQLite database",
    "version": "1.0.0",
    "contact": {
      "name": "Todo API Support"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    }
  ],
  "tags": [
    {
      "name": "Health",
      "description": "API health check"
    },
    {
      "name": "Todos",
      "description": "Todo operations"
    },
    {
      "name": "Search",
      "description": "Search operations"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": ["Health"],
        "summary": "API Health Check",
        "description": "Check if the API is running",
        "operationId": "getHealth",
        "responses": {
          "200": {
            "description": "API is running",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Welcome to the Enhanced Express Todo App!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/todos": {
      "post": {
        "tags": ["Todos"],
        "summary": "Create a new todo",
        "operationId": "createTodo",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title"],
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Buy milk",
                    "description": "Todo title (required)"
                  },
                  "description": {
                    "type": "string",
                    "nullable": true,
                    "example": "2 bottles",
                    "description": "Optional description"
                  },
                  "status": {
                    "type": "string",
                    "enum": ["pending", "in_progress", "done"],
                    "default": "pending",
                    "example": "pending",
                    "description": "Todo status"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Todo created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          },
          "422": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "detail": {
                      "type": "string",
                      "example": "title is required"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Todos"],
        "summary": "List all todos with pagination",
        "operationId": "listTodos",
        "parameters": [
          {
            "name": "skip",
            "in": "query",
            "description": "Number of items to skip",
            "schema": {
              "type": "integer",
              "default": 0,
              "minimum": 0
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of items to return",
            "schema": {
              "type": "integer",
              "default": 10,
              "minimum": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of todos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Todo"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/todos/{id}": {
      "get": {
        "tags": ["Todos"],
        "summary": "Get a single todo by ID",
        "operationId": "getTodoById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Todo ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Todo found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          },
          "404": {
            "description": "Todo not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "detail": {
                      "type": "string",
                      "example": "Todo not found"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Todos"],
        "summary": "Update a todo",
        "operationId": "updateTodo",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Todo ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Buy oat milk"
                  },
                  "description": {
                    "type": "string",
                    "nullable": true,
                    "example": "1 bottle"
                  },
                  "status": {
                    "type": "string",
                    "enum": ["pending", "in_progress", "done"],
                    "example": "done"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Todo updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          },
          "404": {
            "description": "Todo not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "detail": {
                      "type": "string",
                      "example": "Todo not found"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Todos"],
        "summary": "Delete a todo",
        "operationId": "deleteTodo",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Todo ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Todo deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "detail": {
                      "type": "string",
                      "example": "Todo deleted"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Todo not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "detail": {
                      "type": "string",
                      "example": "Todo not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/todos/search/all": {
      "get": {
        "tags": ["Search"],
        "summary": "Search todos by title",
        "operationId": "searchTodos",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Search query (searches in title using LIKE)",
            "schema": {
              "type": "string",
              "default": ""
            },
            "example": "milk"
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Todo"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Todo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1,
            "description": "Unique identifier"
          },
          "title": {
            "type": "string",
            "example": "Buy milk",
            "description": "Todo title"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "example": "2 bottles",
            "description": "Optional description"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in_progress", "done"],
            "example": "pending",
            "description": "Current status"
          }
        },
        "required": ["id", "title", "status"]
      }
    }
  }
}
